<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Product Page</title>
</head>

<body>

    <div class="container mt-5">
        <h1 class="mb-4">Product Table</h1>

        <!-- Add Product Button -->
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addProductModal">Add
            Product</button>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Sub-Category</th>
                        <th>Brand</th>
                        <th>Color</th>
                        <th>MRP</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example Product Row -->
                    <tr>
                        <td>1</td>
                        <td><img src="path/to/product1.jpg" alt="Product 1" class="img-thumbnail"
                                style="max-width: 100px;"></td>
                        <td>Product 1</td>
                        <td>Description of Product 1</td>
                        <td>Blue</td>
                        <td>Product 1</td>
                        <td>Description of Product 1</td>
                        <td>Blue</td>
                        <td>Description of Product 1</td>
                        <td>
                            <button class="btn btn-warning" data-bs-toggle="modal"
                                data-bs-target="#editProductModal">Edit</button>
                            <button class="btn btn-danger" onclick="deleteProduct(1)">Delete</button>
                        </td>
                    </tr>
                    <!-- Repeat the above row structure for each product -->

                </tbody>
            </table>
        </div>
    </div>

    <!-- Add Product Modal -->
    <div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addProductModalLabel">Add Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Form to add a new product -->
                    <form>
                        <div class="mb-3">
                            <label for="productImage" class="form-label">Product Image</label>
                            <input type="file" class="form-control" id="productImage" accept="image/*" required>
                        </div>
                        <div class="mb-3">
                            <label for="productName" class="form-label">Product Name</label>
                            <input type="text" class="form-control" id="productName" required>
                        </div>
                        <div class="d-md-none mb-3"> <!-- Display for phones only -->
                            <label for="productCategoryTextarea" class="form-label">Category</label>
                              <select class="form-select" id="productCategory">
                                <option value="phone">Phone</option>
                                <option value="tablet">Tablet</option>
                            </select>
                        </div>
                        <div class="d-none d-md-block mb-3"> <!-- Hide for phones -->
                            <label for="productCategory" class="form-label">Category</label>
                            <select class="form-select" id="productCategory">
                                <option value="phone">Phone</option>
                                <option value="tablet">Tablet</option>
                            </select>
                        </div>
                        <div class="d-md-none mb-3"> <!-- Display for phones only -->
                            <label for="subproductCategoryTextarea" class="form-label">Sub-Category</label>
                              <select class="form-select" id="subproductCategory">
                                <option value="phone">Phone</option>
                                <option value="tablet">Tablet</option>
                            </select>
                        </div>
                        <div class="d-none d-md-block mb-3"> <!-- Hide for phones -->
                            <label for="subproductCategory" class="form-label">Sub-Category</label>
                            <select class="form-select" id="subproductCategory">
                                <option value="Smartphone">SmartPhone</option>
                                <option value="Keypad">KeypadPhone</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="brand" class="form-label">Brand</label>
                            <input type="text" class="form-control" id="brand" required>
                        </div>
                        <div class="mb-3">
                            <label for="color" class="form-label">Color</label>
                            <input type="text" class="form-control" id="color" required>
                        </div>
                        <div class="mb-3">
                            <label for="mrp" class="form-label">MRP</label>
                            <input type="number" class="form-control" id="mrp" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="description" required>
                        </div>

                        <!-- Add more input fields as needed -->

                        <button type="submit" class="btn btn-primary" onclick="addProduct()">Add Product</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Product Modal -->
    <div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel"
        aria-hidden="true">
        <!-- Similar structure to Add Product Modal, but with pre-filled values for editing -->
        <!-- Include hidden input field for product ID -->
        <!-- Example: <input type="hidden" id="editProductId" value="1"> -->
        <!-- Pre-fill other fields based on the selected product -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
  function addProduct() {
    // Get form values
    var productName = document.getElementById("productName").value;
    var productCategory = document.getElementById("productCategory").value;
    var subproductCategory = document.getElementById("subproductCategory").value;
    var brand = document.getElementById("brand").value;
    var color = document.getElementById("color").value;
    var mrp = document.getElementById("mrp").value;
    var description = document.getElementById("description").value;

    // Create a new table row
    var newRow = document.createElement("tr");
    
    // Add cells to the new row
    newRow.innerHTML = `
      <td>${getNextProductId()}</td>
      <td><img src="path/to/new_product.jpg" alt="${productName}" class="img-thumbnail" style="max-width: 100px;"></td>
      <td>${productName}</td>
      <td>${productCategory}</td>
      <td>${subproductCategory}</td>
      <td>${brand}</td>
      <td>${color}</td>
      <td>${mrp}</td>
      <td>${description}</td>
      <td>
        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editProductModal">Edit</button>
        <button class="btn btn-danger" onclick="deleteProduct(${getNextProductId()})">Delete</button>
      </td>
    `;
    
    // Append the new row to the table body
    document.querySelector("tbody").appendChild(newRow);

    // Close the modal
    $('#addProductModal').modal('hide');
  }

  // Function to get the next product ID (you may need to adjust this based on your needs)
  function getNextProductId() {
    var table = document.querySelector("table");
    return table.rows.length; // Assuming the table has a header row
  }
</script>
</body>

</html>